<% if @order_items.any? %>
<% @order_items.each do |item| %>
  <p><%= item.product.category %> | <%= link_to "Delete", order_item_path(item), :data => {:confirm => "You sure?", :method => "delete"} %></p>
  <%# When order_item.quantity field is added to OrderItem table, change 1 to item.quantity %>
  <p> Unit Price: <%= number_to_currency item.product.price %> | Quantity: <%= item.quantity %> | Total Price: <%= number_to_currency (item.product.price * item.quantity) %></p>
    <%= form_for item  do |f| %>
      Change quantity <%= f.number_field :quantity %> <%= f.submit %>
    <% end %>
  <% end %>
<p>Your Total: <%= number_to_currency current_order.total_price %></p>
<% else %>
<p>Your shopping cart is empty.</p>
<% end %>