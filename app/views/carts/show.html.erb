<% if @order_items.any? %>
<% @order_items.each do |item| %>
  <p><%= item.product.name %> | color: <%= item.product.color %> | <%= link_to "Delete", order_item_path(item), :data => {:confirm => "You sure?", :method => "delete"} %></p>
  <p> Unit Price: <%= number_to_currency item.product.price %> | Quantity: <%= item.quantity %> | Total Price: <%= number_to_currency (item.product.price * item.quantity) %></p>
    <%= form_for item  do |f| %>
      Qty: <%= f.number_field :quantity, class: "box" %> <%= f.submit "Update Order Total" %>
    <% end %>
  <% end %>
<p>Your Total: <%= number_to_currency current_order.total_price %></p>
<% else %>
<p>Your shopping cart is empty.</p>
<% end %>