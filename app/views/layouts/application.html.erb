<!DOCTYPE html>
<html>
  <head>
    <title>OnlineStore</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    
      <nav class="navbar navbar-toggleable-md navbar-light bg-faded navbar-fixed-top">
          <div class = "container">
            <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>

            <h1 class="navbar-brand">FIVE-ONE</h1>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
              <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <%= link_to "Home", root_path, class:"nav-link" %>
                </li>
                <% if logged_in? %>
                <li class="nav-item">
                    <%= link_to "Account", user_path(current_user), class:"nav-link" %>
                </li>
                <li class="nav-item">
                    <%= link_to "View Cart", cart_path, class:"nav-link" %>
                  </li>
                  <li class="nav-item">
                      <%= link_to "Logout", logout_path, method: "DELETE", class:"nav-link" %>
                    </li>
                  <% else %>
                <li class="nav-item">
                    <%= link_to "Login", new_session_path, class:"nav-link" %>
                </li>
                <% end %>
              </ul>
            </div>
            <% if logged_in? %>
            <p class="navbar-text navbar-right float-right">Signed in as <%= current_user.name %></p>
            <% else %>
            <p class="navbar-text navbar-right">Not Signed In?</p>
            <% end %>
            </div>
        </nav>
    

        <%= render 'layouts/partials/flash' %>
      
      <div class = "container">
        <%= yield %>
      </div>
  </body>
</html>

